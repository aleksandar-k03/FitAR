@page "/"

<div class="main-body">
	<div class="page-wrapper">

		<div class="page-body">
			<div class="row">
				<!-- task, page, download counter  start -->
				<div class="col-xl-3 col-md-6">
					<div class="card bg-c-yellow update-card">
